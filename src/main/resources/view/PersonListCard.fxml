<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets top="5" right="5" bottom="5" left="15" />
      </padding>
      <HBox spacing="0.5" alignment="CENTER_LEFT">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="name" text="\$first" styleClass="cell_big_label" textOverrun="ELLIPSIS" ellipsisString="..."/>
      </HBox>
      <FlowPane fx:id="tags" />
      <GridPane hgap="10" alignment="CENTER_LEFT">
        <columnConstraints>
          <ColumnConstraints halignment="LEFT" minWidth="90" prefWidth="90" />
          <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>

        <Label text="📞 Phone:" styleClass="cell_header_label" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <Label fx:id="phone" styleClass="cell_small_label" textOverrun="ELLIPSIS" ellipsisString="..." GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <Label text="🏠 Address:" styleClass="cell_header_label" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <Label fx:id="address" styleClass="cell_small_label" textOverrun="ELLIPSIS" ellipsisString="..." GridPane.rowIndex="1" GridPane.columnIndex="1" />

        <Label text="📧 Email:" styleClass="cell_header_label" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <Label fx:id="email" styleClass="cell_small_label" textOverrun="ELLIPSIS" ellipsisString="..." GridPane.rowIndex="2" GridPane.columnIndex="1" />
    </GridPane>
    </VBox>
  </GridPane>
</HBox>
